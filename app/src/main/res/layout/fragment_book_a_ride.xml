<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.swish.cabinmain.Activities.NavigationDrawerActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="183dp">


        <Button
            android:id="@+id/pick"
            android:layout_width="345dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/button_bookaride"
            android:drawableLeft="@drawable/myridepick"
            android:hint="Select pickup"
            android:text="PICK UP"
            android:textAlignment="textStart"
            android:textColor="#D3D3D3"
            app:layout_constraintBottom_toTopOf="@+id/dest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/dest"
            android:layout_width="345dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/button_bookaride"
            android:drawableLeft="@drawable/myridedest"
            android:hint="Select destination"
            android:text="DESTINATION"
            android:textAlignment="textStart"
            android:textColor="#D3D3D3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pick"
            tools:ignore="MissingConstraints" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>


