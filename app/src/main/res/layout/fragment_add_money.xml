<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.swish.cabinmain.Activities.NavigationDrawerActivity">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="16dp"
            android:text="Topup your Money wallet to book rides and buy monthly passes with just 1 tap"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="16dp" />

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="100dp"
            card_view:cardCornerRadius="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            card_view:cardElevation="8dp"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="19dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Money Balance"
                    tools:layout_editor_absoluteX="5dp"
                    tools:layout_editor_absoluteY="16dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:text="â‚¹"
                    android:textColor="#000"
                    card_view:layout_constraintStart_toEndOf="@+id/textView"
                    tools:layout_editor_absoluteY="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="0"
                    android:textColor="#000"
                    card_view:layout_constraintStart_toEndOf="@+id/textView2"
                    tools:layout_editor_absoluteY="16dp" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="44dp"
                    android:hint="Enter Amount Here "
                    card_view:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="0dp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="83dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/mybutton"
                    android:text="+100"
                    card_view:layout_constraintTop_toBottomOf="@+id/editText"
                    tools:layout_editor_absoluteX="5dp" />

                <Button
                    android:layout_width="83dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="108dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/mybutton"
                    android:text="+500"
                    card_view:layout_constraintEnd_toStartOf="@+id/button2"
                    card_view:layout_constraintHorizontal_bias="0.495"
                    card_view:layout_constraintStart_toEndOf="@+id/button"
                    card_view:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="83dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="108dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/mybutton"
                    android:text="+1000"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:layout_width="367dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#32CD32"
                    android:text="Add money"
                    android:textColor="#fff"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/button" />


            </android.support.constraint.ConstraintLayout>


        </android.support.v7.widget.CardView>


    </android.support.constraint.ConstraintLayout>

</FrameLayout>
